          {
            "text": "Enter cautiously",
            "next": "entrance",
            "effects": { "flags": ["entered_crypt"] }
          },
          {
            "text": "Try to force the doors open completely (Strength Test)",
            "next": "force_door",
            "test": { "stat": "strength", "difficulty": 7 }
          },
          {
            "text": "Examine the entrance before entering (Intelligence Test)",
            "next": "examine",
            "test": { "stat": "intelligence", "difficulty": 7 }
          }
        ]
      },
      "force_door": {
        "text": "With a mighty effort, you push the doors fully open, revealing the interior. However, the exertion has tired you.",
        "choices": [
          {
            "text": "Continue exploring",
