          }
        ]
      },
      "examine_fail": {
        "text": "You observe the entrance but notice nothing particular. The eerie atmosphere makes you uneasy.",
        "choices": [
          {
            "text": "Enter anyway",
            "next": "entrance",
            "effects": { "sanity": -1 }
          }
        ]
      },
      "entrance": {
        "text": "You're in the crypt's atrium. The darkness is almost total. To the left you see a corridor, to the right another closed door.",
        "music": "src/music/crypt_ambient.mp3",
        "choices": [
          {
            "text": "Go left into the corridor",
            "next": "corridor",
            "effects": { "flags": ["went_left"] }
          },
          {
            "text": "Try to open the door on the right",
            "next": "locked_door",
            "oneshot": true
          },
          {
            "text": "Light up the area with the torch",
            "next": "entrance_lit",
            "requirements": { "items": ["torch"] },
            "oneshot": true
          }
        ]
      },
      "entrance_lit": {
        "text": "The torchlight reveals hidden details: on the floor you notice a small silver key!",
        "choices": [
          {
            "text": "Pick up the key",
            "next": "entrance",
            "effects": { 
              "items": [{ "id": "silver_key", "name": "Silver Key", "type": "permanent" }]
            },
            "oneshot": true
          },
          {
            "text": "Leave the key and continue",
            "next": "entrance"
          }
        ]
      },
      "locked_door": {
        "text": "The door is locked. It seems to require a silver key.",
        "choices": [
          {
            "text": "Use the silver key",
            "next": "treasure_room",
            "requirements": { "items": ["silver_key"] },
            "effects": { 
              "items": [{ "id": "silver_key", "name": "Silver Key", "type": "consume" }]
            }
          },
          {
            "text": "Go back",
            "next": "entrance"
          }
        ]
      },
      "treasure_room": {
        "text": "The door opens revealing a small treasure room! You find a healing potion and an ancient scroll.",
        "choices": [
          {
            "text": "Take everything",
            "next": "victory",
            "effects": { 
              "items": [
                { "id": "potion", "name": "Healing Potion", "type": "consumable" },
                { "id": "scroll", "name": "Ancient Scroll", "type": "permanent" }
              ]
            }
          }
        ]
      },
      "corridor": {
        "text": "The corridor is narrow and dark. You hear disturbing noises coming from the depths.",
        "choices": [
          {
            "text": "Continue bravely",
            "next": "deep_crypt",
            "test": { "stat": "dexterity", "difficulty": 9 }
          },
          {
            "text": "Return to the atrium",
            "next": "entrance"
          }
        ]
